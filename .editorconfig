root = true

# Sane defaults:
# - UTF-8 no-BOM
# - Unix-style newlines
# - Tab indentation
# - Wide lines for wide screens
# - Every line ends with a `end_of_line` character
# - Trim whitespace at the end of lines
[*]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = tab
# tab_width = 4
max_line_length = 240
insert_final_newline = true
trim_trailing_whitespace = true

# Don't trim trailing whitespace in files where it carries significance
[*.{md, markdown}]
trim_trailing_whitespace = false
